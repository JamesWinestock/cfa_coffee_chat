
  <%= form_for [locationable, Location.new] do |f| %>
    <p><%= f.text_field :address, placeholder: "Address" %></p>
    <p><%= f.text_field :suburb, placeholder: "Suburb" %></p>
    <p><%= f.text_field :state, placeholder: "state" %></p>
    <p><%= f.text_field :country, placeholder: "country" %></p>
    <p><%= f.text_field :postcode, placeholder: "postcode" %></p>

    <%= f.submit %>
  <% end %>
